#
# architektura i pliki wykonywalne
#

CONFIG_64BIT=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_BINFMT_ELF=y
CONFIG_ELFCORE=y

#
# console and serial
#

CONFIG_TTY=y
CONFIG_UNIX98_PTYS=y

CONFIG_SERIAL_CORE=y
CONFIG_SERIAL_CORE_CONSOLE=y
CONFIG_SERIAL_EARLYCON=y
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_DEPRECATED_OPTIONS=y
CONFIG_SERIAL_8250_NR_UARTS=4
CONFIG_SERIAL_8250_RUNTIME_UARTS=4

#
# pci & virtio (for network and storage devices)
#

CONFIG_PCI=y
CONFIG_VIRTIO_MENU=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTUALIZATION=y
CONFIG_HYPERVISOR_GUEST=y
CONFIG_PARAVIRT=y
CONFIG_KVM_GUEST=y

#
# network
#

CONFIG_NET=y
CONFIG_NET_INGRESS=y
CONFIG_NET_EGRESS=y
CONFIG_INET=y
CONFIG_IPV6=y
CONFIG_IP_MULTICAST=y
CONFIG_UNIX=y

CONFIG_IP_MROUTE=y
CONFIG_IP_MROUTE_COMMON=y
CONFIG_BRIDGE=y
CONFIG_VLAN_8021Q=y
CONFIG_ETHTOOL_NETLINK=y

CONFIG_NETFILTER=y
CONFIG_NETFILTER_ADVANCED=y
CONFIG_NETFILTER_INGRESS=y
CONFIG_NETFILTER_EGRESS=y
CONFIG_NF_REJECT_IPV4=y
CONFIG_NF_REJECT_IPV6=y
CONFIG_BRIDGE_NETFILTER=y

CONFIG_NET_CORE=y
CONFIG_NETDEVICES=y
CONFIG_VIRTIO_NET=y

#
# filesystems
#

CONFIG_SYSFS=y

CONFIG_PROC_FS=y
CONFIG_PROC_SYSCTL=y
CONFIG_PROC_PAGE_MONITOR=y
CONFIG_PROC_PID_ARCH_STATUS=y
CONFIG_PROC_CHILDREN=y

CONFIG_FILE_LOCKING=y
CONFIG_FS_POSIX_ACL=y
CONFIG_FSNOTIFY=y
CONFIG_INOTIFY_USER=y

CONFIG_FUSE_FS=y

#
# filesystems for no-initrd only systems
#

CONFIG_BLOCK=y
CONFIG_BLK_DEV=y
CONFIG_VIRTIO_BLK=y
CONFIG_TMPFS=y
CONFIG_OVERLAY_FS=y
CONFIG_EXT2_FS=y
CONFIG_EXT2_FS_XATTR=y
CONFIG_EXT2_FS_POSIX_ACL=y
CONFIG_EXT2_FS_SECURITY=y
CONFIG_NETWORK_FILESYSTEMS=y
CONFIG_9P_FS=y
CONFIG_NET_9P=y
CONFIG_NET_9P_VIRTIO=y

#
# for turn-off qemu after poweroff
#

CONFIG_ACPI=y

#
# required by inetutils-ping and some gui libs
# (installing mtr without multiuser will broke computer_system_controller fuse filesystem)
#

CONFIG_MULTIUSER=y

#
# misc / expert
#

CONFIG_EXPERT=y
CONFIG_PRINTK=y
CONFIG_EARLY_PRINTK=y
CONFIG_POSIX_TIMERS=y
CONFIG_TIMERFD=y
CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_EVENTFD=y
CONFIG_SHMEM=y
CONFIG_FRAME_POINTER=y
CONFIG_UNWINDER_FRAME_POINTER=y
CONFIG_BASE_SMALL=1
